@model AdViewModel

<div class="container">
    <main role="main" class="pb-3" style="margin-top: 70px;">

        <div class="row">
            <div class="col-md-6 offset-md-3">
                @foreach(var ad in Model.Ads)
                {
                    <div class="jumbotron">
                        <h5>Listed by @ad.UserName</h5>
                        <h5>Listed on @ad.DateCreated.ToLongDateString()</h5>
                        <h5>Phone Number: @ad.PhoneNumber</h5>
                        <h3>Details:</h3>
                        <p>@ad.Details</p>
                        @if(ad.IsAuthorized)
                        {
                            <form method="post" action="/home/deletead">
                                <input type="hidden" name="id" value="@ad.UserId" />
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        }
                    </div>
                }
            </div>
        </div>
    </main>
</div>